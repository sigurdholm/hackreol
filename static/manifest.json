{
    "manifest_version": 3,
    "version": "1.0",
    "name": "hackReolen",
    "description": "hacker eReolen",
    "icons": {
        "128": "icons/128.png"
    },
    "permissions": [
        "downloads"
    ],
    "background": {
        "service_worker": "background.bundle.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.bundle.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/download-icon.svg"
            ],
            "matches": [
                "https://ereolen.dk/*"
            ]
        }
    ]
}